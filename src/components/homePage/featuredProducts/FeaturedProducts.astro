---
import ProductsCarousel from "./ProductsCarousel.astro";
import { carouselProducts } from "../../../lib/carouselProducts";
---

<section>
  <div
    class="max-w-7xl mx-auto flex justify-between text-2xl text-white font-normal px-4 md:px-8 mb-8 md:mb-12
           flex-col md:flex-row gap-4 md:gap-8 text-center md:text-left"
  >
    <h1 class="text-lg sm:text-xl md:text-2xl">WE CREATE HAND MADE QUALITY</h1>
    <h1 class="text-lg sm:text-xl md:text-2xl">
      DIGITAL PRODUCTS FOR EVERYONE
    </h1>
  </div>
  <ProductsCarousel products={carouselProducts} />
</section>

<style>
  /* Mobile-specific improvements */
  @media (max-width: 767px) {
    section {
      padding-top: 1rem;
    }

    /* Optional: Add visual separator between headings on mobile */
    div h1:first-child {
      position: relative;
      padding-bottom: 1rem;
    }

    div h1:first-child::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 2px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 1px;
    }
  }

  /* Very small screens */
  @media (max-width: 390px) {
    div h1 {
      font-size: 1rem !important;
      line-height: 1.3;
    }
  }

  /* Add subtle animation on mobile */
  @media (max-width: 767px) {
    div h1 {
      animation: fadeInUp 0.6s ease-out;
    }

    div h1:last-child {
      animation-delay: 0.1s;
      animation-fill-mode: backwards;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Better text contrast on mobile */
  @media (max-width: 767px) {
    div h1 {
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
  }
</style>
