---
import { Image } from "astro:assets";
import planet from "/public/images/planet.svg";
import logo from "/public/images/hero-logo.svg";
import smallstar from "/public/images/star-small.svg";
import mediumstar from "/public/images/star-medium.svg";
import largestar from "/public/images/star-large.svg";
import halfmoon from "/public/images/half-moon.svg";
---

<div
  class="sm:pt-[12rem] h-screen max-h-[50rem] lg:max-h-[65rem] select-none flex flex-col items-center justify-center relative"
>
  <div>
    <div class="relative text-center ">
      <Image
        src={planet}
        decoding="async"
        alt="planet"
        class="lg:w-38 sm:w-32 w-16 h-auto -left-7 -top-5 sm:-left-15 sm:-top-10 lg:-top-11 absolute z-0 clip-path-moon"
        width={150}
        height={150}
      />
      <Image
        src={smallstar}
        alt=""
        width={32}
        height={32}
        class="w-3 -top-6 right-5 sm:w-7 lg:w-8 h-auto absolute z-0 lg:sm:-top-20 sm:right-0 sm:-top-18"
      />
      <Image
        src={mediumstar}
        alt=""
        width={45}
        height={45}
        class="w-4 -top-5 right-10 sm:w-10 lg:w-12 h-auto absolute z-0 lg:-top-17 lg:right-25 sm:-top-15 sm:right-21"
      />
      <Image
        src={largestar}
        alt=""
        width={80}
        height={80}
        class="w-6 sm:w-16 lg:w-20 h-auto absolute z-0 -top-1 right-5"
      />
      <h1
        class="text-[var(--color-font-gold)] text-[2.5rem] left-12 bottom-18 lg:text-8xl absolute lg:left-34 lg:bottom-52 sm:text-[5rem] sm:left-24 sm:bottom-36"
      >
        digital
      </h1>
      <div class="relative">
        <h1
          class="text-[var(--color-font-gold)] lg:text-[16rem] leading-none relative z-10 sm:text-[12rem] text-[6rem]"
        >
          <span>C</span>reator
        </h1>
        <Image
          src={halfmoon}
          alt=""
          width={100}
          height={220}
          class="sm:h-[10rem] w-auto lg:h-auto absolute z-0 bottom-0 lg:-right-[7rem] -right-[5rem]  hidden sm:block"
        />
      </div>

      <p
        class="text-[#FFFFFF] lg:text-2xl text-[0.6rem] sm:text-[1.25rem] text-right"
      >
        MARÍA JOSÉ VERÓNICA CATALÁN GACITÚA
      </p>
    </div>
  </div>
  <div class="mt-[4rem] md:mt-[8rem]">
    <Image
      src={logo}
      decoding="async"
      alt="logo"
      class="sm:w-58 h-auto w-30"
      width={200}
      height={200}
    />
  </div>
</div>

<style>
  @layer utilities {
    .clip-path-moon {
      clip-path: polygon(
        0 0,
        100% 0,
        100% 20%,
        100% 45%,
        70% 55%,
        54% 100%,
        0 100%,
        0% 20%
      );
    }
</style>
